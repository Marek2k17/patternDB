<IfModule mod_rewrite.c>

    # Enable URL rewriting
    RewriteEngine On

    # visiting the impressum
    RewriteRule ^/impressum/?$ index.php?action=/impressum [NC,L]
    # visiting a pattern view
    RewriteRule ^pattern/(.*)/?$ index.php?action=/show&pattern=$1 [NC,L]
    # General
    RewriteRule ^(.*)$ index.php?action=/$1 [QSA,L]

</IfModule>